<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> <!-- Specify character encoding -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Responsive design viewport settings -->
    <title>Edit User</title> <!-- Page title -->
    <link href="/form-style.css" rel="stylesheet">
</head>
<body>
    <div class="container">
    <h1>Edit User</h1> <!-- Heading -->

    <!-- Form for editing user -->
    <form action="/users/<%= user._id %>?_method=PUT" method="post">
        <!-- Input field for name -->
        <div>
            <label for="name">Name:</label> <!-- Label for name input -->
            <input type="text" id="name" name="name" value="<%= user.name %>" required> <!-- Name input field with current value -->
        </div>

        <!-- Input field for age -->
        <div>
            <label for="age">Age:</label> <!-- Label for age input -->
            <input type="number" id="age" name="age" value="<%= user.age %>" required> <!-- Age input field with current value -->
        </div>

        <!-- Input field for email -->
        <div>
            <label for="email">Email:</label> <!-- Label for email input -->
            <input type="email" id="email" name="email" value="<%= user.email %>" required> <!-- Email input field with current value -->
        </div>

        <!-- Button to submit the form -->
        <button type="submit">Update User</button> <!-- Submit button -->
    </form>

    <!-- Display validation errors if any -->
    <% if (errors) { %>
        <div class="error">
            <h3>Error(s):</h3> <!-- Heading for errors -->
            <ul>
                <!-- List to display individual errors -->
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li> <!-- Display error message -->
                <% }); %>
            </ul>
        </div>
    <% } %>


</div>
</body>
</html>
